% layout 'default';
% title $tag->label . 'を登録している人';

<h3><%= $tag->label %>を登録している人</h3>

% for my $u (@$users) {
<div style="float:left; width:120px;text-align:center;">
<a href="/<%= $u->id %>"><img src="<%= $u->image_url %>" style="padding:1px;border:1px solid #ccc;"/></a>
<div><a href="/<%= $u->id %>">@<%= $u->screen_name %></a></div>
</div>
% }
<div style="clear:both"></div>
